<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_700"
    android:padding="20dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOICE COMMANDS"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textStyle="italic|bold"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_command"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textStyle="italic|bold"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pause_command"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textStyle="italic|bold"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_command"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textStyle="italic|bold"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_command"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textStyle="italic|bold"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nYou can also use this feature by\npressing the headset button."
        android:layout_gravity="center"
        android:textSize="15dp"
        android:fontFamily="casual"
        android:textStyle="italic|bold"
        android:textColor="@color/white"
        />
</LinearLayout>